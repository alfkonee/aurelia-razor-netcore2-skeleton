@{
    string rtlClass = System.Globalization.CultureInfo.CurrentCulture.TextInfo.IsRightToLeft ? "k-rtl" : string.Empty;
}

<template>
    <require from="/jspm_packages/npm/aurelia-kendoui-bridge@1.7.0/grid/grid"></require>
    <require from="/jspm_packages/npm/aurelia-kendoui-bridge@1.7.0/grid/col"></require>
    <require from="/jspm_packages/npm/aurelia-kendoui-bridge@1.7.0/common/template"></require>

    <require from="/kendo-sdk/styles/kendo.common.min.css"></require>
    <require from="/kendo-sdk/styles/kendo.default.min.css"></require>
    @*<require from="/kendo-sdk/styles/kendo.bootstrap.min.css"></require>*@


    <div id="grid-section" class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <button click.delegate="create()" class="btn btn-primary">
                <i class="fa fa-plus"></i>
                Create
            </button>
        </div>

        <div class="clearfix"></div>
        <br />
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 @rtlClass">
            <ak-grid id="grid"
                     k-data-source.bind="datasource"
                     k-widget.bind="grid"
                     k-pageable.bind="{ refresh: true, pageSizes: true, buttonCount: 10 }"
                     k-sortable.bind="true">
                <ak-col k-title="Family Name" k-field="FamilyName"></ak-col>
                <ak-col k-title="Given Name/s" k-field="GivenNames"></ak-col>
                <ak-col k-title="Date of Birth" k-field="DateOfBirth"></ak-col>
                <ak-col k-title=" " k-field="Id">
                    <ak-template>
                        <div class="text-center">
                            <div class="btn-group">
                                <a click.delegate="edit($this.Id)" class="btn btn-default btn-xs">Edit</a>
                                <a click.delegate="remove($this.Id)" class="btn btn-danger btn-xs">Delete</a>
                            </div>
                        </div>
                    </ak-template>
                </ak-col>
            </ak-grid>
        </div>
    </div>

    <div id="form-section" class="row" style="display:none">
        <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">Details</div>
                <div class="panel-body">
                    <form id="form-section-form" role="form" class="form-horizontal">
                        <fieldset>
                            <legend id="form-section-legend"></legend>
                            <div class="row">
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                    <div class="form-group">
                                        @Html.Label("FamilyName", "Family Name", new { @class = "control-label col-xs-12 col-sm-4 col-md-3 col-lg-3" })
                                        <div class="col-xs-12 col-sm-8 col-md-9 col-lg-9">
                                            <input name="FamilyName" type="text" class="form-control" value.bind="familyName" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                    <div class="form-group">
                                        @Html.Label("GivenNames", "Given Name/s", new { @class = "control-label col-xs-12 col-sm-4 col-md-3 col-lg-3" })
                                        <div class="col-xs-12 col-sm-8 col-md-9 col-lg-9">
                                            <input name="GivenNames" type="text" class="form-control" value.bind="givenNames" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                    <div class="form-group">
                                        @Html.Label("DateOfBirth", "Date of Birth", new { @class = "control-label col-xs-12 col-sm-4 col-md-3 col-lg-3" })
                                        <div class="col-xs-12 col-sm-8 col-md-9 col-lg-9">
                                            <input name="DateOfBirth" type="text" class="form-control" value.bind="dateOfBirth" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group pull-right">
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                    <button type="button" class="btn btn-default" click.delegate="cancel()">Cancel</button>
                                    <button type="button" class="btn btn-primary" click.delegate="save()"><i class="fa fa-save"></i> Save</button>
                                </div>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </article>
    </div>
</template>